<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.parasoft.xtest</groupId>
    <artifactId>build.xtest</artifactId>
    <version>10.6.2.20230410</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.parasoft.xtest</groupId>
        <artifactId>build</artifactId>
        <version>10.6.2.20230410</version>
    </parent>

    <properties>
        <product-name>xtest</product-name>

        <parasoft-plugin-name-prefix>parasoft_plugin</parasoft-plugin-name-prefix>
        <parasoft-services-name-prefix>parasoft_services</parasoft-services-name-prefix>
        <parasoft-xtest-name-prefix>xtest</parasoft-xtest-name-prefix>
        <parasoft-xtest-bin-name-prefix>xtest</parasoft-xtest-bin-name-prefix>
        
        <parasoft-p2-name-prefix-with-version>${parasoft-services-name-prefix}_${xtest-public-version}</parasoft-p2-name-prefix-with-version>
        <parasoft-plugin-name-prefix-with-version>${parasoft-plugin-name-prefix}_${xtest-public-version}</parasoft-plugin-name-prefix-with-version>
        <parasoft-services-name-prefix-with-version>parasoft_services_${xtest-public-version}</parasoft-services-name-prefix-with-version>
        <parasoft-xtest-name-prefix-with-version>xtest_${xtest-public-version}</parasoft-xtest-name-prefix-with-version>
        <plugin-doc-version>${xtest-release-version}${xtest-release-version-qualifier}</plugin-doc-version>
        <innostetup-exe>C:/Program Files (x86)/Inno Setup 5/ISCC.exe</innostetup-exe>
        <signtool-exe>C:/Program Files/Microsoft SDKs/Windows/v7.1/Bin/signtool.exe</signtool-exe>

        <vstudio-build-mode>-D:release=false</vstudio-build-mode>
        <SCRIPTS_DIR>${env.WORKSPACE}/build/scripts</SCRIPTS_DIR>
    </properties>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-compiler-plugin</artifactId>
                <version>${tycho-version}</version>
                <configuration>
                    <strictCompilerTarget>true</strictCompilerTarget>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <useJDK>BREE</useJDK>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-packaging-plugin</artifactId>
                <version>${tycho-version}</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                    <strictBinIncludes>false</strictBinIncludes>
                    <additionalFileSets>
                        <fileSet>
                            <prefix>lib/</prefix>
                            <directory>${project.build.directory}/lib/</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileSet>
                    </additionalFileSets>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <testSource>${jdk.test.version}</testSource>
                    <testTarget>${jdk.test.version}</testTarget>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
         <profile>
             <id>dtrack</id>
             <modules>
                 <module>../../common/com.parasoft.xtest.logging.api</module>
                 <module>../../common/com.parasoft.xtest.services.api</module>
                 <module>../../common/com.parasoft.xtest.common.api</module>
                 <module>../../common/com.parasoft.xtest.configuration.api</module>
                 <module>../../common/com.parasoft.xtest.configuration</module>
                 <module>../../common/com.parasoft.xtest.preference.api</module>
                 <module>../../common/com.parasoft.xtest.results.api</module>
                 <module>../../common/com.parasoft.xtest.results</module>
                 <module>../../common/com.parasoft.xtest.analyzers.api</module>
                 <module>../../common/com.parasoft.xtest.dupcode.api</module>
                 <module>../../common/com.parasoft.xtest.scontrol.api</module>
                 <module>../../common/com.parasoft.xtest.reports.api</module>
                 <module>../../common/com.parasoft.xtest.scope.api</module>
                 <module>../../common/com.parasoft.xtest.common.base</module>
                 <module>../../common/com.parasoft.xtest.common</module>
                 <module>../../common/com.parasoft.xtest.share.api</module>
                 <module>../../common/com.parasoft.xtest.testcases.api</module>
                 <module>../../common/com.parasoft.xtest.coverage.api</module>
                 <module>../../common/com.parasoft.xtest.resource.api</module>
                 <module>../../common/com.parasoft.xtest.chart.api</module>
                 <module>../../common/com.parasoft.xtest.communicator/</module>
                 <module>../../common/com.parasoft.xtest.scontrol.rtc/</module>
                 <module>../../common/com.parasoft.xtest.share</module>
                 <module>../../common/com.parasoft.xtest.lic.client</module>
                 <module>../../common/com.parasoft.xtest.coverage</module>
                 <module>../../common/com.parasoft.xtest.scope</module>
                 <module>../../common/com.parasoft.xtest.common.swing</module>
                 <module>../../common/com.parasoft.xtest.reports</module>
                 <module>../../common/com.parasoft.xtest.scontrol</module>
                 <module>../../common/com.parasoft.xtest.repository</module>
                 <module>../../common/com.parasoft.xtest.common.ui</module>
                 <module>../../common/com.parasoft.xtest.techsupport</module>
                 <module>../../common/com.parasoft.xtest.suppressions</module>
                 <module>../../common/com.parasoft.xtest.authorship</module>
                 <module>../../common/com.parasoft.xtest.coverage.ui</module>
                 <module>../../common/com.parasoft.xtest.results.ui</module>
                 <module>../../common/com.parasoft.xtest.dupcode</module>
                 <module>../../common/com.parasoft.xtest.reports.fonts</module>
                 <module>../../common/com.parasoft.xtest.reports.pdf</module>
                 <module>../../common/com.parasoft.xtest.scontrol.tfs</module>

                 <module>../../intellij/com.parasoft.xtest.common.intellij</module>
                 <module>../../intellij/com.parasoft.xtest.logging.intellij</module>
             </modules>
             <repositories>
                <repository>
                    <id>xtest-libs</id>
                    <url>${xtest.libs.repository.url}</url>
                    <layout>p2</layout>
                </repository>
                <!-- repository>
                     <id>xtest-services</id>
                     <url>http://${parasoft-buildserver-deploy-base-uri}/builds/${product-name}/${xtest-build-path}/com.parasoft.xtest/</url>
                     <layout>p2</layout>
                <repository -->
             </repositories>
             <build>
                 <plugins>
                     <plugin>
                         <groupId>org.cyclonedx</groupId>
                         <artifactId>cyclonedx-maven-plugin</artifactId>
                         <version>2.5.3</version>
                         <executions>
                             <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>makeAggregateBom</goal>
                            </goals>
                        </execution>
                         </executions>
                         <inherited>false</inherited>
                         <configuration>
                             <projectType>library</projectType>
                             <schemaVersion>1.3</schemaVersion>
                             <includeBomSerialNumber>true</includeBomSerialNumber>
                             <includeCompileScope>true</includeCompileScope>
                             <includeProvidedScope>true</includeProvidedScope>
                             <includeRuntimeScope>true</includeRuntimeScope>
                             <includeSystemScope>true</includeSystemScope>
                             <includeTestScope>false</includeTestScope>
                             <includeLicenseText>false</includeLicenseText>
                             <outputFormat>json</outputFormat>
                             <outputName>xtest-bom</outputName>
                         </configuration>
                     </plugin>
                 </plugins>
             </build>
         </profile>

        <profile>
            <id>xtest.release</id><!-- for releases, overrides profile "xtest.settings" in ./build/xtest.maven/builder/xtest.maven.settings.xml -->
            <properties>
               <vstudio-build-mode>-D:release=true -D:debug.libs=true</vstudio-build-mode>
               <xtest-release-version-qualifier>.${xtest-build-timestamp}</xtest-release-version-qualifier>
            </properties>
        </profile>
        <profile>
            <id>xtest.eula</id>
            <build>
              <plugins>
                 <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-scm-plugin</artifactId>
                    <inherited>false</inherited>
                    <executions>
                       <execution>
                          <id>checkout.eula</id>
                          <goals>
                             <goal>checkout</goal>
                          </goals>
                          <phase>validate</phase>
                          <configuration>
                             <basedir>${project.build.directory}</basedir>
                             <checkoutDirectory>${project.build.directory}/Agreement_Templates</checkoutDirectory>
                             <connectionType>connection</connectionType>
                             <connectionUrl>scm:svn:https://svn.parasoft.com/svn/sales/All%20Sales/Templates/Agreement_Templates</connectionUrl>
                             <connectionType>connection</connectionType>
                             <username>devtest</username>
                             <password>dev%pass</password>
                          </configuration>
                       </execution>
                    </executions>
                 </plugin>
              </plugins>
            </build>
        </profile>
        <profile>
            <id>junit.api</id>
            <modules>
                <module>../../common</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.common</id>
            <modules>
                <module>../../common</module>
                <module>../../build</module>
            </modules>
            <repositories>
                <repository>
                    <id>xtest-libs</id>
                    <url>${xtest.libs.repository.url}</url>
                    <layout>p2</layout>
                </repository>
            </repositories>
            <build>
                <plugins>
                     <plugin>
                        <groupId>org.codehaus.gmavenplus</groupId>
                        <artifactId>gmavenplus-plugin</artifactId>
                        <executions>
                          <execution>
                            <phase>pre-integration-test</phase>
                            <goals>
                              <goal>execute</goal>
                            </goals>
                          </execution>
                        </executions>
                        <configuration>
                          <properties>
                              <property>
                                  <name>XTEST_PROPS_FILE</name>
                                  <value>${XTEST_PROPS_FILE}</value>
                              </property>
                              <property>
                                  <name>SCRIPTS_DIR</name>
                                  <value>${SCRIPTS_DIR}</value>
                              </property>
                          </properties>
                          <scripts>
                            <script>file:///${SCRIPTS_DIR}/jar-no-lib.gy</script>
                          </scripts>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>xtest.tests</id>
            <modules>
                <module>junit.tests</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.eclipse</id>
            <modules>
                <module>../../eclipse</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.intellij</id>
            <modules>
                <module>../../intellij</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.common-ui.tests</id>
            <modules>
                <module>../../intellij</module>
                <module>../../eclipse/com.parasoft.xtest.common.eclipse</module>
                <module>../../eclipse/com.parasoft.xtest.logging.eclipse</module>
                <module>../../eclipse/com.parasoft.xtest.runner.eclipse</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.full-cont.tests</id>
            <modules>
                <module>../../intellij</module>
                <module>../../eclipse/com.parasoft.xtest.common.eclipse</module>
                <module>../../eclipse/com.parasoft.xtest.logging.eclipse</module>
                <module>../../eclipse/com.parasoft.xtest.runner.eclipse</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.vstudio</id>
            <modules>
                <module>../../vstudio</module>
            </modules>
        </profile>
        <profile>
          <id>xtest.src</id>
          <build>
              <plugins>
                    <plugin>
                        <groupId>org.eclipse.tycho</groupId>
                        <artifactId>tycho-source-plugin</artifactId>
                        <version>${tycho-version}</version>
                        <executions>
                            <execution>
                                <id>plugin-source</id>
                                <goals>
                                    <goal>plugin-source</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
              </plugins>
          </build>
        </profile>        
        <profile>
            <id>xtest.jenkins</id>
            <modules>
                <module>../../common</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.sonar</id>
            <modules>
                <module>../../common</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.installers</id>
            <modules>
                 <module>installer</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.libs</id>
            <modules>
                <module>../../common/com.parasoft.xtest.libs.osgi</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.libs.sign</id>
            <build>
                <plugins>
                    <plugin><!-- reguired because it is a parent of VS build -->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.12</version>
                        <executions>
                            <execution>
                                <id>escape-baskslashes</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>regex-property</goal>
                                </goals>
                                <configuration>
                                    <value>${project.build.directory}</value>
                                    <regex>\\</regex>
                                    <replacement>\\\\</replacement>
                                    <name>escapedBuildDirectory</name>
                                    <failIfNoMatch>false</failIfNoMatch>
                                 </configuration>
                             </execution>
                         </executions>
                     </plugin>
                     <plugin>
                        <groupId>org.codehaus.gmavenplus</groupId>
                        <artifactId>gmavenplus-plugin</artifactId>
                        <executions>
                          <execution>
                            <phase>pre-integration-test</phase>
                            <goals>
                              <goal>execute</goal>
                            </goals>
                          </execution>
                        </executions>
                        <configuration>
                          <properties>
                              <property>
                                  <name>XTEST_PROPS_FILE</name>
                                  <value>${XTEST_PROPS_FILE}</value>
                              </property>
                              <property>
                                  <name>SCRIPTS_DIR</name>
                                  <value>${SCRIPTS_DIR}</value>
                              </property>
                              <property>
                                  <name>escapedBuildDirectory</name>
                                  <value>${escapedBuildDirectory}</value>
                              </property>
                              <property>
                                  <name>pathlibs</name>
                                  <value>${pathlibs}</value>
                              </property>
                              <property>
                                  <name>filterlibs</name>
                                  <value>${filterlibs}</value>
                              </property>
                              <property>
                                  <name>parasoftKeystore</name>
                                  <value>${parasoft-keystore}</value>
                              </property>
                              <property>
                                  <name>parasoftKeypass</name>
                                  <value>${parasoft-keypass}</value>
                              </property>
                          </properties>
                          <scripts>
                            <script>file:///${SCRIPTS_DIR}/jar-no-lib.gy</script>
                            <script>file:///${SCRIPTS_DIR}/jarsigner.gy</script>
                          </scripts>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>jtest.install</id>
            <modules>
                <module>tools</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.vstudio.dottest</id>
            <build>
                <plugins>
                   <plugin>
                      <groupId>org.apache.maven.plugins</groupId>
                      <artifactId>maven-antrun-plugin</artifactId>
                      <executions>
                          <execution>
                              <id>run.dottest</id>
                              <phase>compile</phase>
                              <goals>
                                  <goal>run</goal>
                              </goals>
                              <configuration>
                                  <target>
                                      <echo>Running dotTest on xtest VS solution</echo>
                                      <exec executable="${dottest-location}" dir="${basedir}/../../vstudio" errorproperty=" " failonerror="true">
                                          <arg line="-config &quot;${dottest-config}&quot;"/>
                                          <arg line="-solution &quot;${basedir}/../../vstudio/xtest.sln&quot;"/>
                                          <arg line="-report &quot;${dottest-report-location}&quot;"/>
                                          <arg line="-settings &quot;${dottest-settings}&quot;"/>
                                          <arg line="-out &quot;${dottest-report-location}/dottest.static.out&quot;"/>
                                      </exec>
                                  </target>
                              </configuration>
                          </execution>
                      </executions>
                   </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
