<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.parasoft.xtest.common</groupId>
    <artifactId>common.xtest</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.parasoft.xtest</groupId>
        <artifactId>build.xtest</artifactId>
        <version>10.6.2.20230410</version>
        <relativePath>../build/xtest.maven</relativePath>
    </parent>

    <scm>
        <connection>scm:git:ssh://trove.parasoft.com:7999/xtest/xtest.git</connection>
        <developerConnection>scm:git:ssh://trove.parasoft.com:7999/xtest/xtest.git</developerConnection>
        <url>scm:git:ssh://trove.parasoft.com:7999/xtest/xtest.git</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <maven-javadoc-src-suffix>**\/\*.java</maven-javadoc-src-suffix>
    </properties>

    <profiles>
        <profile>
            <!-- required for testing in project with Maven structure (not separated to .tests project)
            so, required to be build with common but not duplicated in the reactor in other jobs -->
            <id>junit.api</id>
            <modules>
                <module>com.parasoft.xtest.junit.api</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.common</id>
            <modules>
                <module>com.parasoft.xtest.analyzers.api</module>
                <module>com.parasoft.xtest.authorship</module>
                <module>com.parasoft.xtest.chart.api</module>
                <module>com.parasoft.xtest.common.api</module>
                <module>com.parasoft.xtest.common.base</module>
                <module>com.parasoft.xtest.common</module>
                <module>com.parasoft.xtest.common.ui</module>
                <module>com.parasoft.xtest.common.swing</module>
                <module>com.parasoft.xtest.communicator</module>
                <module>com.parasoft.xtest.configuration.api</module>
                <module>com.parasoft.xtest.configuration</module>
                <module>com.parasoft.xtest.coverage.api</module>
                <module>com.parasoft.xtest.coverage</module>
                <module>com.parasoft.xtest.coverage.all</module>
                <module>com.parasoft.xtest.coverage.ui</module>
                <module>com.parasoft.xtest.dupcode.api</module>
                <module>com.parasoft.xtest.dupcode</module>
                <module>com.parasoft.xtest.lic.client</module>
                <module>com.parasoft.xtest.lic.client.tiny</module>
                <module>com.parasoft.xtest.lic.client.all</module>
                <module>com.parasoft.xtest.logging.api</module>
                <module>com.parasoft.xtest.preference.api</module>
                <module>com.parasoft.xtest.reports.api</module>
                <module>com.parasoft.xtest.reports</module>
                <module>com.parasoft.xtest.reports.fonts</module>
                <module>com.parasoft.xtest.reports.pdf</module>
                <module>com.parasoft.xtest.repository</module>
                <module>com.parasoft.xtest.resource.api</module>
                <module>com.parasoft.xtest.results.api</module>
                <module>com.parasoft.xtest.results</module>
                <module>com.parasoft.xtest.results.ui</module>
                <module>com.parasoft.xtest.scope.api</module>
                <module>com.parasoft.xtest.scope</module>
                <module>com.parasoft.xtest.services.api</module>
                <module>com.parasoft.xtest.share.api</module>
                <module>com.parasoft.xtest.share</module>
                <module>com.parasoft.xtest.scontrol.api</module>
                <module>com.parasoft.xtest.scontrol</module>
                <module>com.parasoft.xtest.scontrol.tfs</module>
                <module>com.parasoft.xtest.suppressions</module>
                <module>com.parasoft.xtest.techsupport</module>
		<module>com.parasoft.xtest.testimpact</module>
                <module>com.parasoft.xtest.testcases.api</module>
                <module>com.parasoft.xtest.analyzers.checkstyle</module>
                <module>com.parasoft.xtest.analyzers.findbugs</module>
                <module>com.parasoft.xtest.analyzers.simulator</module>
                <module>com.parasoft.xtest.controller.demo</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.jenkins</id>
            <modules>
                <module>com.parasoft.xtest.reports.jenkins/repository</module>
                <module>com.parasoft.xtest.reports.jenkins</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.sonar</id>
            <modules>
                <module>com.parasoft.xtest.reports.sonar</module>
            </modules>
        </profile>
        <profile>
            <id>xtest.src.api.javadoc</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javadocs-generation</id>
                                <goals>
                                    <goal>aggregate-no-fork</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <failOnError>false</failOnError>
                                    <detectLinks>true</detectLinks>
                                    <aggregate>true</aggregate>
                                    <windowtitle>Parasoft Plugin API</windowtitle>
                                    <doctitle>Parasoft Plugin API</doctitle>
                                    <reportOutputDirectory>${project.build.directory}/site/apidocs</reportOutputDirectory>
                                    <sourceFileIncludes>
                                        <include>com/parasoft/xtest/analyzers/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/common/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/configuration/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/coverage/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/dupcode/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/logging/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/reports/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/results/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/scontrol/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/scope/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/services/api/${maven-javadoc-src-suffix}</include>
                                        <include>com/parasoft/xtest/testcases/api/${maven-javadoc-src-suffix}</include>
                                    </sourceFileIncludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
